{
    "name": "@gnome/env",
    "version": "0.0.0",
    "exports": {
        ".": "./mod.ts",
        "./env.deno": "./env.deno.ts",
        "./env.node": "./env.node.ts",
        "./env.browser": "./env.browser.ts"
    },
    "compilerOptions": {
        "lib": ["deno.ns", "deno.unstable", "dom"]
    },
    "fmt": {
        "indentWidth": 4,
        "useTabs": false,
        "lineWidth": 120,
        "exclude": ["**/*.md"]
    },

    "tasks": {
        "test": "deno test -A",
        "coverage": "deno test --coverage=.artifacts/code-coverage -A",
        "lcov": "deno coverage .artifacts/code-coverage --lcov > .artifacts/code-coverage.lcov"
    },

    "publish": {
        "include": [
            "mod.ts",
            "env.deno.ts",
            "env.node.ts",
            "env.browser.ts",
            "types.ts",
            "README.md",
            "LICENSE.md",
            "deno.json"
        ]
    },
    "imports": {
    }
}
